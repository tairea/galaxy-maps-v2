{
  "compilerOptions": {
    "module": "Node16",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "allowJs": true,
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src"]
}
